<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SplashScreen"
    android:background="@color/primary_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_starter"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="10dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/covid_icon"
            android:layout_margin="5dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COVID-19"
            android:textSize="30sp"
            android:fontFamily="@font/gilroy_bold"
            android:textColor="@color/white_color"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_covid"
            android:textSize="15sp"
            android:layout_margin="5dp"
            android:fontFamily="@font/gilroy_light"
            android:textColor="@color/white_color"
            android:textAlignment="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_starter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="10dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_corners"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ketahui Lebih Lengkap"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:fontFamily="@font/gilroy_bold"
            android:textColor="@color/primary_color"/>

        <ImageButton
            android:id="@+id/btnGo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_arrow"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corners_primary"
            />

    </LinearLayout>

</RelativeLayout>